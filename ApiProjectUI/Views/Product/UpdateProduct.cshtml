@model ProductViewModel
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-controller="Product" asp-action="UpdateProduct" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ProductID" />
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" asp-for="ProductName" />
    </div>
    <div>
        <label>Ürün Markası</label>
        <input type="text" class="form-control" asp-for="ProductBrand" />
    </div>
    <div>
        <label>Son Kullanma Tarihi</label>
        <input type="text" class="form-control" asp-for="ProductExpDate"  value="@Model.ProductExpDate.ToShortDateString()"/>
    </div>
    <div>
        <label>Ürün Durumu</label>
        <input type="radio" asp-for="ProductStatus" value="true" />
        <label for="CustomerStatusActive">Aktif</label>
        <input type="radio" asp-for="ProductStatus" value="false" />
        <label for="CustomerStatusInactive">Pasif</label>
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
</form>