@model IEnumerable<Invoice>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<table class="table table-bordered">
    <tr class="text-center">
        <th>#</th>
        <th>Fatura No.</th>
        <th>Müşteri Adı</th>
        @* <th>Müşteri Durumu</th> *@
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr class="text-center">
            <th>@item.InvoiceID</th>
            <td>@item.InvoiceDocNumber</td>
            <td>@item.Customer.CustomerName</td>
@*             <td>
                @if (item.SalesInvoiceLines.Count > 0)
                {
                    <span class="text-success">Aktif</span>
                }
                else
                {
                    <span class="text-danger">Pasif</span>
                }
            </td> *@
            <td><a asp-controller="Customer" asp-action="DeleteCustomer" asp-route-id="@item.CustomerID" class="btn btn-danger">Sil</a></td>
            <td><a asp-controller="Customer" asp-action="UpdateCustomer" asp-route-id="@item.CustomerID" class="btn btn-success">Güncelle</a></td>
            <td><a asp-controller="Customer" asp-action="DetailCustomer" asp-route-id="@item.CustomerID" class="btn btn-dark">Detaylar</a></td>
        </tr>
    }
</table>
<a asp-controller="Customer" asp-action="AddCustomer" class="btn btn-info text-white">Yeni Müşteri Kaydı</a>