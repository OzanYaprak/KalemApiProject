@model CustomerViewModel
@{
    ViewData["Title"] = "AddAdmin";
}

<form asp-controller="Customer" asp-action="AddCustomer" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <label>Müşteri Adı</label>
        <input type="text" class="form-control" asp-for="CustomerName"/>
        <span asp-validation-for="CustomerName" class="text-danger"></span>
    </div>
    <div>
        <label>Müşteri Soyadı</label>
        <input type="text" class="form-control" asp-for="CustomerSurname" />
        <span asp-validation-for="CustomerSurname"></span>
    </div>
    <div>
        <label>Müşteri TCKN:</label>
        <input type="text" class="form-control" asp-for="CustomerTcID" />
        <span asp-validation-for="CustomerTcID"></span>
    </div>
    <div>
        <label>Müşteri Doğum Tarihi</label>
        <input type="text" class="form-control" asp-for="CustomerBirthDate" />
        <span asp-validation-for="CustomerBirthDate"></span>
    </div>
    <div>
        <label>Müşteri Durumu</label>
        <input type="radio" asp-for="CustomerStatus" value="true"/>
        <label for="CustomerStatusActive">Aktif</label>
        <input type="radio" asp-for="CustomerStatus" value="false" />
        <label for="CustomerStatusInactive">Pasif</label>
    </div>
    <div>
        <button class="btn btn-primary">Ekle</button>
    </div>
</form>